@model TeduShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<!--file css cua page Register-->
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css">
@{
    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
}
<style>
    .register-top-grid input[type="password"], .register-bottom-grid input[type="password"] {
        border: 1px solid #EEE;
        outline-color: #FF5B36;
        width: 85%;
        font-size: 1em;
        padding: 0.5em;
        margin: 0.5em 0;
    }

    .register-but input[type="submit"] {
        background: #F97E76;
        color: #FFF;
        font-size: 1em;
        padding: 0.8em 2em;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -o-transition: 0.5s all;
        display: inline-block;
        text-transform: uppercase;
        border: none;
        outline: none;
    }
</style>

<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>chức mừng bạn </strong>đã đăng kí thành công.
                <br />Vui lòng click<a href="/dang-nhap.html">vào đây</a>để đăng nhập
            </div>
        }

        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <div class="register-top-grid">
            <h3>Thông tin cá nhân</h3>
            <div class="mation">
                <span>Họ tên<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)
                <span>Email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email)
                <span>Địa chỉ<label>*</label></span>
                @Html.TextBoxFor(model => model.Address)
                <span>Số điện thoại<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)
                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(model => model.Password)

                <!--capcha-->

                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")

            </div>
            <div class="clearfix"> </div>

        </div>
        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="submit">
            <div class="clearfix"> </div>
        </div>
    }

</div>

